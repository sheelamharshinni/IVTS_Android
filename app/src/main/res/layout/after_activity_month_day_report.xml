<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Reports"
            android:textColor="@color/textcolor_color"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Vehicle No. :"
                        android:textColor="@color/textcolor_color"
                        android:textSize="14dp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/sp_vehiclelist"
                            style="@style/MyAlertDialogStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_baground"
                            android:drawableLeft="@drawable/icon"
                            android:gravity="center"
                            android:inputType="text"
                            android:popupBackground="#fff"
                            android:textColor="#000"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/textcolor_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rb_Distance"
                        android:layout_width="180dp"
                        android:layout_height="38sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:text="Performance Report"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14dp" />


                    <Button

                        android:id="@+id/rb_performance"
                        android:layout_width="180dp"
                        android:layout_height="38sp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:text="Monthly Report"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rb_Monthly"
                        android:layout_width="180dp"
                        android:layout_height="38sp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:checked="true"
                        android:text="Month-Day Split"

                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <Button

                        android:id="@+id/bt_Speed"
                        android:layout_width="180dp"
                        android:layout_height="38sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:text="Speed"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <Button

                        android:id="@+id/bt_Idle"
                        android:layout_width="180dp"
                        android:layout_height="38sp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:text="Idle"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/bt_Stopage"
                        android:layout_width="180dp"
                        android:layout_height="38sp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:checked="true"
                        android:text="Stoppage"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
