<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_SudentName"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/edittext_baground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Route Number"
            android:textColor="@color/textcolor_black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_ClassName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_baground"

            android:gravity="center"
            android:padding="5dp"
            android:text="Route Type"
            android:textColor="@color/textcolor_black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_ParentName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_baground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Route Drsc."
            android:textColor="@color/textcolor_black"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_routeame"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_baground"
            android:gravity="center"
            android:padding="5dp"
            android:text="Route Drsc."
            android:textColor="@color/textcolor_black"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_ViewMore"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_baground"
            android:gravity="center"
            android:padding="5dp"
            android:text="View More"
            android:textColor="@color/textcolor_color"
            android:textSize="14dp" />


    </LinearLayout>


</RelativeLayout>