<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Admin_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout"
            layout="@layout/head_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/daily_weekly_button_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rg_runing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/textcolor_color"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Route Allocation List"
                    android:textColor="@color/textcolor_color"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/rg_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/textcolor_color"
                    android:gravity="center"
                    android:text="Sudent List"
                    android:textColor="@color/textcolor_color"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/menu_ic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_menu"
                    android:tint="@color/textcolor_color"
                    android:visibility="gone" />


            </RadioGroup>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/ll_horizantal_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/textcolor_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Route Number"
                        android:textColor="@color/textcolor_white"
                        android:textSize="14dp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@color/textcolor_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Route Type"
                        android:textColor="@color/textcolor_white"
                        android:textSize="14dp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@color/textcolor_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Route Description"
                        android:textColor="@color/textcolor_white"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@color/textcolor_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Vehicle Number"
                        android:textColor="@color/textcolor_white"
                        android:textSize="14dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:scrollbars="vertical"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/ll_studentdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    style="@style/CardView.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/textcolor_white"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/expandableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_toolbar"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="0.7"
                                    android:text="Route"
                                    android:textColor="@color/textcolor_color"
                                    android:textSize="@dimen/_12ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textColor="@color/textcolor_white"
                                    android:textSize="@dimen/_12ssp" />


                                <Spinner
                                    android:id="@+id/sp_Route"
                                    style="@style/MyAlertDialogStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1.3"
                                    android:background="@drawable/edittext_baground"
                                    android:drawableLeft="@drawable/icon"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:popupBackground="#fff"
                                    android:textColor="@color/textcolor_white"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:text="Point Type"
                                    android:textColor="@color/textcolor_color"
                                    android:textSize="@dimen/_12ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textColor="@color/textcolor_white"
                                    android:textSize="@dimen/_12ssp" />


                                <Spinner
                                    android:id="@+id/sp_pickup"
                                    style="@style/MyAlertDialogStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"

                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1.3"
                                    android:background="@drawable/edittext_baground"
                                    android:drawableLeft="@drawable/icon"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:popupBackground="#fff"
                                    android:textColor="@color/textcolor_white"
                                    android:textSize="12dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:text="Point Name"
                                    android:textColor="@color/textcolor_color"
                                    android:textSize="@dimen/_12ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textColor="@color/textcolor_white"
                                    android:textSize="@dimen/_12ssp" />


                                <Spinner
                                    android:id="@+id/sp_droprouteD"
                                    style="@style/MyAlertDialogStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1.3"
                                    android:background="@drawable/edittext_baground"
                                    android:drawableLeft="@drawable/icon"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:popupBackground="#fff"
                                    android:textColor="@color/textcolor_white"
                                    android:textSize="12dp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/bt_go"
                                android:layout_width="50dp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/textcolor_color"
                                android:gravity="center"
                                android:text="Go"
                                android:textAllCaps="false"
                                android:textColor="@color/textcolor_white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                </androidx.cardview.widget.CardView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/textcolor_color"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Student Name"
                                android:textColor="@color/textcolor_white"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_D"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="1"
                                android:background="@color/textcolor_color"

                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Class Name "
                                android:textColor="@color/textcolor_white"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_WDT"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="1"
                                android:background="@color/textcolor_color"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Parent Name"
                                android:textColor="@color/textcolor_white"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="1"
                                android:background="@color/textcolor_color"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Route"
                                android:textColor="@color/textcolor_white"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="1"
                                android:background="@color/textcolor_color"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="View More"
                                android:textColor="@color/textcolor_white"
                                android:textSize="14dp" />


                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/my_recycler_view_student"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:visibility="visible" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>